<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Lobby</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/bundles.css" />
    <script type="module" src="/js/chat.js" defer></script>
    <script type="module" src="/js/lobby.js" defer></script>
  </head>
  <body class="bg-gray-100 min-h-screen p-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">
          Hello <%= user.username %> (<%= user.id %>)
        </h1>
        <a 
          href="/auth/logout" 
          class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition"
        >
          Logout
        </a>
    </div>

    <form method="post" action="/games" class="bg-white p-6 rounded-lg shadow-md mb-8">
      <h2 class="text-xl font-semibold mb-4">Create New Game</h2>
        
        <div class="mb-4">
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
            Game Name
          </label>
          <input 
            type="text" 
            name="name" 
            id="name"
            placeholder="Optional game name"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div class="mb-4">
          <label for="max_players" class="block text-sm font-medium text-gray-700 mb-2">
            Max Players
          </label>
          <input 
            type="number" 
            name="max_players" 
            id="max_players"
            placeholder="Optional max players (default 4)"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <button 
          type="submit"
          class="w-full px-4 py-2 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600 transition"
        >
          Create Game
        </button>
      </form>

      <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <h2 class="text-xl font-semibold mb-4">Available Games</h2>
        <div id="game-list" class="space-y-3"></div>
      </div>

      <!-- Chat Area -->
      <div id="chat-area" class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold mb-4">Chat</h2>
        <div id="message-listing" class="mb-4 h-64 overflow-y-auto border border-gray-200 rounded p-4"></div>
        <div id="message-submit" class="flex gap-2">
          <input 
            type="text" 
            placeholder="Enter your message"
            class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <button class="px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition">
            Send
          </button>
        </div>
      </div>
    </div>

    <!-- Chat Message -->
    <template id="template-chat-message">
      <div class="chat-message mb-3 p-2 bg-gray-50 rounded">
        <div class="message-header flex justify-between text-sm text-gray-600 mb-1">
          <span class="message-username font-semibold"></span>
          <span class="message-time"></span>
        </div>
        <span class="message-text text-gray-800"></span>
      </div>
    </template>

    <!-- Game Listing -->
    <template id="game-listing-template">
      <div 
        class="game-item flex justify-between items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition"
        data-game-id=""
      >
        <div class="game-info flex-1">
          <span class="game-name block text-lg font-semibold text-gray-800 mb-1"></span>
          <div class="game-meta flex gap-4 text-sm text-gray-600">
            <span class="game-state"></span>
            <span class="game-players"></span>
          </div>
        </div>
        <div class="game-actions flex gap-2">
          <button 
            class="btn-join px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition disabled:bg-gray-300 disabled:cursor-not-allowed"
            data-action="join"
          >
            Join
          </button>
          <button 
            class="btn-spectate px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition"
            data-action="spectate"
          >
            Spectate
          </button>
        </div>
      </div>
    </template>
  </body>
</html>