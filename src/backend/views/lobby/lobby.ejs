<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lobby</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/bundle.css" />
    <script type="module" src="/js/chat.js" defer></script>
    <script type="module" src="/js/lobby.js" defer></script>
  </head>

  <body>
    <div class="bg"></div>

    <div class="header">
        <div class="header__identity">
            <h1>Lobby</h1>
            <span class="user-info">Hello, <%= user.username %> (#<%= user.id %>)</span>
        </div>
        <a href="/auth/logout" class="logout-btn">Logout</a>
    </div>

    <div class="container">
        <div class="main-content">
            <div class="card">
                <h2>Create New Game</h2>
                <form method="post" action="/games" class="create-game-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="max_players">Max Players</label>
                            <input 
                                type="number" 
                                name="max_players" 
                                id="max_players"
                                placeholder="Default: 4"
                                min="2"
                                max="10"
                            />
                        </div>
                    </div>
                    <button type="submit" class="btn-primary">Create Game</button>
                </form>
            </div>

            <div class="card games-section">
                <h2>Available Games</h2>
                <div id="game-list">
                    <p class="no-games">No games available. Create one to get started!</p>
                </div>
            </div>
        </div>

        <div class="chat-section">
            <div class="card">
                <h2>Lobby Chat</h2>
                <div id="message-listing"></div>
                <div id="message-submit">
                    <input type="text" placeholder="Type a message..." />
                    <button>Send</button>
                </div>
            </div>
        </div>
    </div>

    <template id="template-chat-message">
        <div class="chat-message">
            <div class="message-header">
                <span class="message-username"></span>
                <span class="message-time"></span>
            </div>
            <div class="message-text"></div>
        </div>
    </template>

    <template id="game-listing-template">
        <div class="game-item" data-game-id="">
            <div class="game-info">
                <span class="game-name"></span>
                <div class="listing-meta">
                    <span class="game-state"></span>
                    <span class="game-players"></span>
                </div>
            </div>
            <div class="game-actions">
                <button class="btn-join" data-action="join">Join Game</button>
                <button class="btn-spectate" data-action="spectate">Spectate</button>
            </div>
        </div>
    </template>
</body>
</html>
