<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lobby - Poker</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/bundle.css" />
    <script type="module" src="/js/chat.js" defer></script>
    <script type="module" src="/js/lobby.js" defer></script>
</head>

<body>
    <!-- Header with Logo & Avatar -->
    <div class="header card">
        <h1>
            <span class="poker-logo">üÉè</span>
            Poker
        </h1>
        <div class="header-user">
            <img src="https://api.dicebear.com/7.x/fun-emoji/svg?seed=<%= user.username %>" alt=""
                class="header-avatar" />
            <span class="header-username">
                <%= user.username %>
            </span>
            <a href="/auth/logout" class="btn-link">Logout</a>
        </div>
    </div>

    <div class="lobby-container">
        <!-- Main Section: Create + Game Lists -->
        <div class="lobby-main">
            <!-- Create Game Form -->
            <div class="card">
                <h2>Create New Game</h2>
                <form method="post" action="/games">
                    <div class="form-group">
                        <label for="name">Game Name</label>
                        <input type="text" name="name" placeholder="Optional" />
                    </div>
                    <div class="form-group">
                        <label for="max_players">Max Players</label>
                        <input type="number" name="max_players" value="4" min="2" max="10" />
                    </div>
                    <button type="submit" class="btn-primary">Create</button>
                </form>
            </div>

            <!-- Two Game Lists -->
            <div class="lobby-game-columns">
                <div class="card">
                    <h2>Your Games</h2>
                    <div id="my-game-list"></div>
                </div>

                <div class="card">
                    <h2>Available Games</h2>
                    <div id="available-game-list"></div>
                </div>
            </div>
        </div>

        <!-- Chat Section -->
        <div class="lobby-chat">
            <div class="card">
                <h2>Lobby Chat</h2>
                <div id="chat-area">
                    <div id="message-listing" class="message-listing"></div>
                    <div id="message-submit" class="message-submit">
                        <input type="text" placeholder="Enter your message" />
                        <button class="btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chat Message Template -->
    <template id="template-chat-message">
        <div class="chat-message">
            <div class="message-header">
                <span class="message-username"></span>
                <span class="message-time"></span>
            </div>
            <span class="message-text"></span>
        </div>
    </template>

    <!-- Game Listing Template -->
    <template id="game-listing-template">
        <div class="game-item">
            <div class="game-info">
                <span class="game-name"></span>
                <span class="game-meta">
                    <span class="game-state"></span>
                    <span class="max-players"></span>
                </span>
            </div>
            <form method="post" action="#">
                <button class="btn-primary">Join</button>
            </form>
        </div>
    </template>
</body>

</html>