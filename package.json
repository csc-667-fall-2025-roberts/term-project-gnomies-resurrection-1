{
  "name": "term-project-gnomies-resurrection-1",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:backend": "rm -rf dist && tsc && cp -R src/backend/views dist/backend/views",
    "build:frontend": "esbuild src/frontend/entrypoint.ts --bundle --outfile=dist/public/js/bundle.js",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/backend/server.js",
    "dev:frontend": "esbuild src/frontend/entrypoint.ts --bundle --outfile=dist/public/js/bundle.js --watch",
    "dev:backend": "nodemon --exec ts-node src/backend/server.ts",
    "start:dev": "concurrently --names \"backend,frontend,live\" --prefix-colors \"green,blue,red\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:browser\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csc-667-fall-2025-roberts/term-project-gnomies-resurrection-1.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/csc-667-fall-2025-roberts/term-project-gnomies-resurrection-1/issues"
  },
  "homepage": "https://github.com/csc-667-fall-2025-roberts/term-project-gnomies-resurrection-1#readme",
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pg-promise": "^12.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.1",
    "@types/node-pg-migrate": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
