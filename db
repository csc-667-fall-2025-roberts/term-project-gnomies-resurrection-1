psql postgresql://bao@localhost/poker_game << 'EOF'
-- Drop ALL tables
DROP TABLE IF EXISTS community_cards CASCADE;
DROP TABLE IF EXISTS player_cards CASCADE;
DROP TABLE IF EXISTS chat_messages CASCADE;
DROP TABLE IF EXISTS game_players CASCADE;
DROP TABLE IF EXISTS games CASCADE;
DROP TABLE IF EXISTS cards CASCADE;
DROP TABLE IF EXISTS session CASCADE;
DROP TABLE IF EXISTS users CASCADE;
DROP TABLE IF EXISTS pgmigrations CASCADE;

-- Drop ALL custom types
DROP TYPE IF EXISTS game_state CASCADE;
DROP TYPE IF EXISTS player_role CASCADE;

-- Verify completely clean
SELECT 'Tables:' as check_type;
\dt

SELECT 'Types:' as check_type;
\dT
EOF